<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">
    <link rel="stylesheet" href="css/payment.css">
   
    <title>Payment Page</title>
</head>
<body>
    
    <!-- start: Payment -->
    <section class="payment-section">
        <div class="container">
            <div class="payment-wrapper">
                <div class="payment-left">
                    <div class="price__card">
                        <div class="price__content">
                          <h4>6 Month</h4>
                          <p>
                            IDR 200.000
                          </p>
                          <hr />
                          <h4>Benefits</h4>
                          <li>Free subscription theater online for 6 month</li>
                          <li>Free 1 ticket video call</li>
                          <li>Free merchandise</li>
                        </div>
                      </div>

                    <div class="payment-content">
                        <div class="payment-body">
                            <div class="payment-summary">             
                                <div class="payment-summary-divider"></div>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="payment-right">
                    <form action="" method="post" class="payment-form">
                        <h1 class="payment-title">Payment Details</h1>
                        <div class="payment-method">
                            <input type="radio" name="payment-method" id="method-1" checked>
                            <label for="method-1" class="payment-method-item">
                                <img src="images/gopay.png" alt="">
                            </label>
                            <input type="radio" name="payment-method" id="method-2">
                            <label for="method-2" class="payment-method-item">
                                <img src="images/Ovo.png" alt="">
                            </label>
                            <input type="radio" name="payment-method" id="method-3">
                            <label for="method-3" class="payment-method-item dana">
                                <img src="images/dana.png" alt="">
                            </label>
                            <input type="radio" name="payment-method" id="method-4">
                            <label for="method-4" class="payment-method-item">
                                <img src="images/qris.png" alt="">
                            </label>
                        </div>
                        <input type="hidden" for="type" name="type" id="type" value="">
                        <div class="payment-form-group">
                            <input type="text" value="<%= user.name %>" readonly placeholder=" " class="payment-form-control" id="username" name="name">
                            <label for="card-number" class="payment-form-label payment-form-label-required">Username</label>
                          </div>
                        <div class="payment-form-group">
                            <input type="email" placeholder=" " class="payment-form-control" id="email" name="email">
                            <label for="email" class="payment-form-label payment-form-label-required">Email Address</label>
                        </div>
                        <div class="payment-form-group">
                            <input type="number" placeholder=" " class="payment-form-control" id="phone-number" name="number">
                            <label for="card-number" class="payment-form-label payment-form-label-required">Phone Number</label>
                        </div>

                        <div class="payment in">
                            <div class="payment-body">
                                <div class="payment-plan">
                                    <div class="payment-plan-info">
                                        <div class="payment-plan-info-name">PRICE</div>
                                        <div class="payment-plan-info-price">Rp 200.000</div>
                                    </div>
                                </div>
                                <div class="payment-summary">
                                    <div class="payment-summary-item">
                                        <div class="payment-summary-name">10% Tax</div>
                                        <div class="payment-summary-price">RP 20.000</div>
                                    </div>
                                    <div class="payment-summary-divider"></div>
                                    <div class="payment-summary-item payment-summary-total">
                                        <div class="payment-summary-name">Total</div>
                                        <div class="payment-summary-price">-RP 220.000</div>
                                    </div>
                                    <input type="hidden" for="harga" name="price" value="220000" >
                        
                        <button type="submit" class="payment-form-submit-button"><i class="ri-wallet-line"></i> Pay</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
   

    <script>
        const images = document.querySelectorAll('.payment-method-item');

        images.forEach(image =>{
            image.addEventListener('click',()=>{
                images.forEach(img => img.classList.remove('selected'));
                image.classList.add('selected');
                const selectedImageSrc = image.getAttribute('src');
                console.log('Selected Image:', selectedImageSrc);
            })
        })
    </script>
</body>
</html>