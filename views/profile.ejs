<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>JKT48 Profile</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="css/style.css">

    <style>
        .warning{
            color: red;
        }
    </style>
</head>
<body>
  <script>
    var messages = "<%= messages %>";
    if( messages && messages != "open"){
      alert( messages);
    }
  </script>
    <div class="container mt-5">
      <a href="/memberhsip">back</a>
        <div class="row">
            <div class="col-md-6">
                <form action="/updateUser" method="post">
                    <div class="mb-3">
                      <input type="hidden" name="id" value="<%= user.id %>">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" id="name" class="form-control" placeholder="Name" value="<%= user.name %>" name="name">
                    </div>
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#changePasswordModal">
                        Change Password
                    </button>
                    <button type="submit" class="btn btn-success">Update Account</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Change Password Modal -->
    <div class="modal fade" id="changePasswordModal" tabindex="-1" aria-labelledby="changePasswordModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="changePasswordModalLabel">Change Password</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/changePassword" method="post" id="changePasswordForm">
                        <input type="hidden" name="id" value="<%= user._id %>">
                        <div class="mb-3">
                            <label for="currentPassword" class="form-label">Current Password</label>
                            <input type="password" class="form-control" id="currentPassword" name="currentPassword" required>
                        </div>
                        <div class="mb-3">
                            <label for="newPassword" class="form-label">New Password</label>
                            <input type="password" class="form-control" id="newPassword" name="newPassword" required>
                        </div>
                        <div class="mb-3">
                            <label for="confirmPassword" class="form-label">Confirm New Password</label>
                            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
                        </div>
                        <div class="warning">
                          <%= open %>
                        </div>
                        <br>
                        <button type="submit" class="btn btn-primary" data-bs-target="#changePasswordModal">Change Password</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Delete User Form -->
    <form id="deleteUserForm_<%= user._id %>" action="/deleteuser" method="post" onsubmit="return confirmDelete('<%= user._id %>')" class="mt-3">
        <input type="hidden" name="userId" value="<%= user._id %>">
        <button type="submit" class="btn btn-danger" onclick=" document.getElementById('deleteUserForm_<%= user._id %>').submit();">
            Delete Account
        </button>
    </form>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        function confirmDelete() {
            return confirm("Are you sure you want to delete this user?");
          }
      var messages = "<%= open %>";
      console.log(messages);
      if(messages){
        const myModal = new bootstrap.Modal(document.getElementById('changePasswordModal'));
        myModal.show();
      }

    //   open modal by button
        const changePasswordButton = document.querySelector('.btn-primary');
        changePasswordButton.addEventListener('click', () => {
            $('#changePasswordModal').modal('show');
        });
    </script>
</body>
</html>
